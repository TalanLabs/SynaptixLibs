<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
	<!-- Console output -->
	<appender name="STDOUT" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%-5p %d{MM-dd HH:mm:ss} %m  (%F:%L) \n" />
		</layout>
	</appender>

	<category name="com.synaptix.smackx.service">
		<priority value="error" />
	</category>

	<category name="com.synaptix.swing">
		<priority value="error" />
	</category>

	<category name="org.java.plugin">
		<priority value="error" />
	</category>

	<category name="java.sql">
		<priority value="error" />
	</category>

	<category name="net.java.dev.openim">
		<priority value="error" />
	</category>

	<category name="com.synaptix.client">
		<priority value="error" />
	</category>

	<category name="org.apache.vysper">
		<priority value="error" />
	</category>

	<category name="stanza.client">
		<priority value="error" />
	</category>

	<category name="stanza.server">
		<priority value="error" />
	</category>

	<category name="org.apache.mina">
		<priority value="error" />
	</category>

	<category name="com.synaptix.auth">
		<priority value="error" />
	</category>

	<category name="com.synaptix.constants">
		<priority value="error" />
	</category>

	<category name="org.mortbay.log">
		<priority value="warn" />
	</category>

	<!-- category name="fr.gefco.tli.psc.server.common"> <priority value="error" 
		/> </category -->

	<category name="com.synaptix.mybatis">
		<priority value="error" />
	</category>
	
	<category name="org.apache.ibatis">
		<priority value="error" />
	</category>
	
	<category name="org.apache.ibatis.logging.jdbc">
		<priority value="error" />
	</category>
	
	<category name="org.dbunit">
		<priority value="error" />
	</category>
	
	<root>
		<priority value="debug" />
		<appender-ref ref="STDOUT" />
	</root>
</log4j:configuration>
