<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module PUBLIC "-//Google Inc.//DTD Google Web Toolkit 2.4.0//EN" "http://google-web-toolkit.googlecode.com/svn/tags/2.4.0/distro-source/core/src/gwt-module.dtd">

<module>
	<inherits name="com.synaptix.constants.SynaptixConstants" />

	<source path='client' />

	<generate-with
		class="com.synaptix.gwt.rebind.component.ComponentDtoGenerator">
		<when-type-assignable
			class="com.synaptix.gwt.shared.component.IComponentDto" />
	</generate-with>

	<define-property name="com.synaptix.gwt.constants.useI18nFilter"
		values="true,false" />
	<set-property name="com.synaptix.gwt.constants.useI18nFilter"
		value="true" />

	<generate-with
		class="com.synaptix.gwt.rebind.constants.ConstantsGWTBundleGenerator">
		<when-type-assignable
			class="com.synaptix.constants.shared.ConstantsBundle" />
	</generate-with>

</module>
